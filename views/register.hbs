<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/public/styleRegister.css">
    <title>Web Bank Registration Page</title>
    <script>
        window.onload = function() 
        {
            document.getElementById("registerForm").onsubmit = function() 
            {
                var password = document.getElementById("newPassword").value;
                var confirmPassword = document.getElementById("confirmPassword").value;

                if (password !== confirmPassword) 
                {
                    document.querySelector('.error-message').textContent = "Passwords do not match.";
                    document.querySelector('.error-message').style.visibility = 'visible';
                    return false;
                }

                if (password.length < 8) 
                {
                    document.querySelector('.error-message').textContent = "Password must be at least 8 characters.";
                    document.querySelector('.error-message').style.visibility = 'visible';
                    return false;
                }

                document.querySelector('.error-message').textContent = "";
                document.querySelector('.error-message').style.visibility = 'hidden';
                return true;
            };
        };
    </script>
</head>
<body>
    <header>
        <img src="/public/images/webBankLogo.png" alt="Web Bank Logo">
        <h1>Register for a Web Bank Account</h1>
    </header>
    <div class="error-message"></div>
    <div class="success-message"></div>
    <div class="messages">
        {{#if successMessage}}
        <p class="success">{{successMessage}}</p>
        {{/if}}
        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
    </div>
    <form id="registerForm" action="/register" method="post" class="form-container">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="Enter your email" required>
        <br>
        <label for="newPassword">New Password:</label>
        <input type="password" id="newPassword" name="newPassword" placeholder="Create a password" required>
        <br>
        <label for="confirmPassword">Confirm Password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required>
        <br>
        <button type="submit">Register</button>       
    </form>
</body>
</html>
