<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/public/styleDeposit.css">
    <title>Web Bank Deposit Page</title>
</head>
<body>
    <header>
        <img src="/public/images/webBankLogo.png" alt="Web Bank Logo">
        <h1>Deposit page of your Web Bank account</h1>
    </header>
    <p>Welcome, {{ username }}!</p>
    {{#if errorMessage}}
    <div class="error-message">
        <p>Error: {{ errorMessage }}</p>
    </div>
    {{/if}}
    {{#if depositMessage}} 
    <div class="success-message">
        <p>Deposit Successful: ${{ depositAmount }} was deposited to account {{ accountNumber }}</p>
    </div>
    {{/if}}
    <section class="deposit-section">
        <h2>Your Account Deposit:</h2>
        <p>Account Number: {{ accountNumber }}</p> 
                
        <form action="/deposit" method="post">
            <input type="hidden" name="accountNumber" value="{{ accountNumber }}">
      
            <label for="depositAmount">Enter deposit amount:</label>
            <input type="number" id="depositAmount" name="depositAmount" min="0.01" step="0.01" placeholder="Enter amount" required>
            
            <button type="submit">Deposit</button>
        </form>
        
        <form action="/main" method="get">
            <button type="submit">Cancel Deposit</button>
        </form>
        
        <form action="/main" method="get">
            <button type="submit">Return to Banking</button>
        </form>
    </section>
</body>
</html>
